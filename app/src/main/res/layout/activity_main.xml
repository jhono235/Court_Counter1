<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Home Team"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:textSize="14sp"
    android:textColor="#616161"
    android:fontFamily="sans-serif-medium"
    android:layout_marginTop="16dp"

    />
    <TextView
        android:id="@+id/teamAScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:textSize="56sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeouts Left"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="#616161"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/timeoutsLeftHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="24dp"
            />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touchdown!"
        android:textAllCaps="false"
        android:onClick="touchdownHome"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extra Point"
        android:textAllCaps="false"
        android:onClick="extraPointHome"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Field Goal"
        android:textAllCaps="false"
        android:onClick="fieldGoalHome"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety"
            android:textAllCaps="false"
            android:onClick="safetyHome"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeout"
            android:textAllCaps="false"
            android:onClick="homeTimeoutCounter"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"

            />
    </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginTop="16dp"
            ></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Away Team"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="#616161"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"

            />
        <TextView
            android:id="@+id/teamBScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="56sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeouts Left"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="#616161"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"

            />
        <TextView
            android:id="@+id/timeoutsLeftAway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="24dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Touchdown!"
            android:textAllCaps="false"
            android:onClick="touchdownAway"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Point"
            android:textAllCaps="false"
            android:onClick="extraPointAway"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Goal"
            android:textAllCaps="false"
            android:onClick="fieldGoalAway"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety"
            android:textAllCaps="false"
            android:onClick="safetyAway"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeout"
            android:textAllCaps="false"
            android:onClick="awayTimeoutCounter"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"

            />
    </LinearLayout>






</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_gravity="center"
        android:onClick="resetScore"
        android:layout_marginBottom="32dp"

        />






</LinearLayout>